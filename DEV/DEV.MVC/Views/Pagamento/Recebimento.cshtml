@Model.DEV.Models.ProdutosModel
@{
    ViewBag.Title = "Recebimento";


}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="form-row">
            <div class="form-group col-md-5">
                <h6 class="m-0 font-weight-bold text-gradient-light">Recebimento de Produtos</h6>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dtusuario" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Preco</th>
                        <th>Quantidade em Estoque</th>
                        <th>Data de Registro</th>
                        <th>Acao</th>
                    </tr>
                </thead>
                <tbody>
                    <asp:Repeater runat="server" ID="rptUsuarios">
                        <ItemTemplate>
                            <tr>
                                @foreach (var item in Model)
                                {
                                    <td>
                                        <a class=" text-success" href="pagamentoForm.aspx?idProduto=@item.Id">
                                            @item.Nome
                                        </a>
                                    </td>
                                    <td>@item.Nome</td>
                                    <td>@item.Quantidade</td>
                                    <td>@item.DataRegistro </td>
                                    <td>

                                        <a class=" text-success" href="pagamentoForm.aspx?idProduto=@item.Id">
                                            Receber
                                        </a>

                                    </td>
                                }
                            </tr>
                            </ItemTemplate>
                        </asp:Repeater>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Call the dataTables jQuery plugin
        $(document).ready(function () {
            $('#dtusuario').DataTable();
        });

    </script>